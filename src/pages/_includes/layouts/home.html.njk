{% extends "layouts/base.html.njk" %} 
{% block content %}
<div class="wrapper">
  <article class="intro">
    <div class="[ intro__header ] [ radius frame ]">
      <h1 class="[ intro__heading ] [ weight-normal text-500 md:text-600 ]">
        {{ intro.eyebrow }}
        <em class="text-700 lg:text-800 weight-bold">{{ intro.main }}</em>
      </h1>
    </div>
    <div class="[ intro__content ] [ flow ]">
      <h3 class="[ intro__summary ] [ color-dark-shade ]">
        {{ intro.summary }}
      </h3>
      <ul role="list" class="[ services__list ]">
        {% for item in intro.services %}
        <li data-icon="✏️" class="flow flow-space-300 weight-bold">
          {{ item }}
        </li>
        {% endfor %}
      </ul>
      <a href="{{ intro.buttonUrl }}" class="button">{{ intro.buttonText }}</a>
    </div>
    <div class="intro__media">
      <picture class="intro__image">
        <source
          media="(min-width: 37em)"
          srcset="/images/hero/hero_full.webp"
        />
        <img
          src="/images/hero/hero_face.webp"
          alt="Фото адвоката Катерини Панчелюги"
        />
      </picture>
    </div>
  </article>
</div>

